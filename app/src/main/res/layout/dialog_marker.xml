<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:orientation="horizontal">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_gravity="center"
       android:gravity="center"
       android:layout_margin="@dimen/_5sdp"
       android:orientation="horizontal">

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:layout_gravity="center"
           android:id="@+id/flNone"
           android:layout_height="wrap_content">

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_35sdp"
               android:layout_gravity="center"
               android:src="@drawable/gray_full_rounded_corner"/>

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_35sdp"
               android:layout_gravity="center"
               android:tint="@color/white"
               android:id="@+id/ivNone"
               android:visibility="gone"
               android:padding="@dimen/_5sdp"
               android:src="@drawable/ic_baseline_check_24"/>

       </FrameLayout>

       <FrameLayout
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:id="@+id/flPink"
           android:layout_gravity="center"
           android:layout_height="wrap_content">

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_35sdp"
               android:layout_gravity="center"
               android:src="@drawable/pink_full_rounded_corner"/>

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_35sdp"
               android:layout_gravity="center"
               android:tint="@color/white"
               android:id="@+id/ivPink"
               android:visibility="gone"
               android:padding="@dimen/_5sdp"
               android:src="@drawable/ic_baseline_check_24"/>

       </FrameLayout>
       <FrameLayout
           android:layout_width="match_parent"
           android:layout_weight="1"
           android:layout_gravity="center"
           android:id="@+id/flGreen"
           android:layout_height="wrap_content">

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_35sdp"
               android:layout_gravity="center"
               android:src="@drawable/green_full_rounded_corner"/>

           <androidx.appcompat.widget.AppCompatImageView
               android:layout_width="@dimen/_35sdp"
               android:layout_height="@dimen/_35sdp"
               android:layout_gravity="center"
               android:id="@+id/ivGreen"
               android:tint="@color/white"
               android:visibility="gone"
               android:padding="@dimen/_5sdp"
               android:src="@drawable/ic_baseline_check_24"/>

       </FrameLayout>


   </LinearLayout>
</LinearLayout></layout>